<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F6973">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="278dp"

                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/videos_button"/>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addFalseReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add False Report"
            app:icon="@drawable/ic_add_black_24dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="32dp">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
    </FrameLayout>
    <FrameLayout

        android:id="@+id/asker"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#004981">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="164dp"

                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/chatbot"/>

            <TextView
                android:layout_width  = "wrap_content"
                android:layout_height = "wrap_content"
                android:textSize      = "28sp"
                android:fontFamily      = "sans-serif-medium"
                android:textColor     = "#fafafa"
                android:text          = "Make Social Truth Default Assistant App"
                android:layout_gravity= "center"
                android:singleLine="false"
                android:gravity="center"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width  = "wrap_content"
                android:layout_height = "wrap_content"
                android:textSize      = "18sp"
                android:fontFamily      = "sans-serif-light"
                android:textColor     = "#fafafa"
                android:text          = "This Is Required For Social Truth To Function"
                android:textAlignment="center"
                android:layout_gravity= "center"
                android:singleLine="false"
                android:gravity="left"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/makeDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Default"
            app:icon="@drawable/ic_assistant_white_24dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="32dp">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
    </FrameLayout>

</FrameLayout>